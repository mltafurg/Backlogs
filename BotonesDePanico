import java.util.Scanner;

public class BotonesDePanico {
    public static void main(String[] args) {
        // Definir variables
        Scanner scanner = new Scanner(System.in);
        String correo_electronico = "", contraseña = "", nombre = "", municipio = "";
        String nombre_contacto = "", parentezco = "";
        int Opcion_registro, numero_contacto, agregar_contacto;
        int Opcion_boton, sub_boton, salir_sub_boton, sub_boton1;

