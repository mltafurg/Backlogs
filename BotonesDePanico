            case 4:
                System.out.println("AMIGO MENTAL");
                i = 0;
                while (i <= 1) {
                    System.out.println("Digita el sub-botón al que deseas ingresar [1-4]");
                    System.out.println(" [1] = ¿Necesitas ayuda psicológica?");
